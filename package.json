{
  "name": "crossplane-skyhook",
  "version": "0.0.1",
  "description": "Crossplane Skyhook server for executing code from compositions",
  "license": "MIT",
  "packageManager": "yarn@4.7.0",
  "type": "module",
  "main": "src/index.ts",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "bin": "build/crossplane-skyhook",
  "scripts": {
    "dev": "node --no-warnings --experimental-strip-types --experimental-loader ./node_modules/node-ts-modules/ts-module-loader.mjs src/index.ts",
    "dev:start": "NODE_OPTIONS='--no-warnings --experimental-strip-types' build/crossplane-skyhook",
    "build": "yarn build:clean && yarn build:ncc:begin && yarn build:ncc && yarn build:ncc:end && yarn build:blob && yarn build:node && yarn build:postject",
    "build:clean": "rm -rf ./build && mkdir -p build",
    "build:ncc:begin": "jq '.type = \"commonjs\"' package.json > tmp.json && mv tmp.json package.json",
    "build:ncc": "ncc build src/index.ts --out build/ncc",
    "build:ncc:end": "jq '.type = \"module\"' package.json > tmp.json && mv tmp.json package.json",
    "build:blob": "node --experimental-sea-config=sea-config.json",
    "build:node": "node -e \"require('fs').copyFileSync(process.execPath, 'build/crossplane-skyhook')\" && chmod 0755 build/crossplane-skyhook",
    "build:postject": "npx postject build/crossplane-skyhook NODE_SEA_BLOB build/crossplane-skyhook.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2",
    "test": "mocha --require ts-node/register 'tests/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register 'tests/integration/**/*.test.ts'"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@kubernetes-models/crd-generate": "^5.0.2",
    "@types/chai": "^5.2.0",
    "@types/fs-extra": "^11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "@vercel/ncc": "^0.38.3",
    "chai": "^5.2.0",
    "mocha": "11.1.0",
    "postject": "^1.0.0-alpha.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "yaml": "^2.7.0"
  },
  "dependencies": {
    "@types/express": "^5.0.1",
    "@yarnpkg/cli": "^4.7.0",
    "@yarnpkg/core": "^4.2.1",
    "@yarnpkg/plugin-essentials": "^4.3.1",
    "commander": "^13.1.0",
    "express": "^5",
    "fs-extra": "^11.3.0",
    "pino": "^9.6.0",
    "skyhook-libs": "workspace:^"
  }
}
