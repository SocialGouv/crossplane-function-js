{
  "name": "@crossplane-js/dev",
  "version": "0.0.6",
  "description": "Development tooling for Crossplane XFuncJS",
  "license": "MIT",
  "packageManager": "yarn@4.8.1",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn workspace @crossplane-js/server build",
    "test": "mocha --require ts-node/register 'tests/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register 'tests/integration/**/*.test.ts'",
    "prepare": "husky",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts .",
    "format": "prettier --write \"**/*.{js,ts,json,md,yaml,yml}\"",
    "type-check": "tsc --noEmit",
    "release": "commit-and-tag-version"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@kubernetes-models/crd-generate": "^5.0.2",
    "@types/chai": "^5.2.0",
    "@types/fs-extra": "^11",
    "@types/js-yaml": "^4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "chai": "^5.2.0",
    "commit-and-tag-version": "^12.5.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.5.0",
    "mocha": "11.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "yaml": "^2.7.0"
  },
  "dependencies": {
    "node-ts-modules": "^0.0.2"
  }
}
